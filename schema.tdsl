database dsl
url "localhost"
username "root"
port 3306

table User:
    id: int primary
    firstName: string
    lastName: string
    age: int
        constraint age >= 18
    phone: string?
        constraint "\\d{8}"
    email: string
        constraint "^\\S+@\\S+\\.\\S+$"
    address: Address?


table Address:
    id: string primary
    street: string
        constraint "^\\S+@\\S+\\.\\S+$"
    zipcode: int
    city: string
